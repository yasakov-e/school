<h1>Articles#index</h1>
<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.topic %></td>
        <td><%= article.summary %></td>
        <td><%= link_to 'Show', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>
