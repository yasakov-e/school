<% @title = "#{@group.number}-#{@group.parallel}" %>
<h1> <%= t('group') %> <%= t(@group.number) %><%= t(@group.parallel) %> </h1>
<table>
  <thead>
    <tr>
      <th> <%= t('name') %> </th>
      <th> <%= t('surname') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', groups_path %>
